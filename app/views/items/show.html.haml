%h2 Show Item

%h4= @item.name.upcase

%ul
  %li Price #{@item.price}
  %li Weight #{@item.weight}
  %li Description #{urls_to_content(@item.desc)}
  %li Link: #{urls_to_content('https://ru.wikipedia.org/wiki/%D0%A0%D1%83%D0%B1%D0%B8%D0%BD')}

%br

= button_to "edit #{@item.name}", edit_item_path, method: :get
= button_to "delete", item_path(@item), method: :delete
= button_to "index", items_path, method: :get

= render partial: "shared/email"

