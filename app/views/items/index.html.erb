<h2>All Item</h2>

<% unless @items.empty? %>
  <table class="my_table">
    <tr>
      <th>Id</th>
      <th>Name</th>
      <th>Price</th>
      <th>Description</th>
      <th>Rating</th>
      <th>Image</th>
      <th>Delete</th>
    </tr>
    <% @items.each do |item| %>

      <!--   <li><%= link_to item.name, "/items/#{item.id}" %></li>
    Или вариант ниже
 -->
      <tr>
        <th><%= item.id %></th>
        <th><%= link_to item.name, item_path(item) %></th>
        <th><%= item.price %></th>
        <th><%= "img" if item.desc %></th>
        <th><%= item.votes_count %>, <%= link_to "+", upvote_item_path(item) %></th>
        <th><%= !item.image.nil? ? image_tag(item.image.file, width: '30px', height: '30px') : 'no img' %></th>
        <th><%= button_to "delete", item_path(item), method: :delete %></th>
      </tr>
    <% end %>
  </table>

  <br/>
  <%= button_to 'new item', new_item_path, method: :get %>
  <%= button_to 'expensive', expensive_items_path, method: :get %>
  <%= button_to 'index', items_path, method: :get %>
  <%= button_to 'admin panel', admin_users_count_path, method: :get %>
<% else %>
  <h2>No Item</h2>
  <%= button_to 'new item', new_item_path, method: :get %>
<% end %>

<%= render :partial => "shared/email" %>