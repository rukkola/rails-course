<h2>Create new Item</h2>

<%= form_tag items_path, method: :post do %>
  <%= label_tag :name %>
  <%= text_field_tag :name %>
  <%= label_tag :price %>
  <%= text_field_tag :price %>
  <%= label_tag :desc %>
  <%= text_field_tag :desc %>
  <%= submit_tag "Save", class: "btn btn-large btn-primary" %>
<% end %>

<%= render :partial => "shared/email" %>